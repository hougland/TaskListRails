<%= form_for @task, :html => {:class => "form-inline"} do |f| %>
  <fieldset>
    <legend>Do it Here</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :person_id %>
    <%= f.collection_select(:person_id, Person.all, :id, :name,
      prompt: "Select one:") %>

    <%= f.submit value: "#{button_text} Task", class: "btn btn-default"%>
  </fieldset>
<% end %>
