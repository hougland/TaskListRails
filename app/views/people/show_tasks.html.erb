<h1>Here are <%= @person.name %>'s Tasks</h1>

<table class = "table table-hover">
  <tr>
    <th>Task</th>
    <th>Description</th>
    <th>Complete</th>
  </tr>

    <% @person.tasks.each do |task| %>
      <tr>
      <td><%= link_to "#{task.name}", "/tasks/#{task.id}"%></td>
      <td><%= task.description %></td>
      <td><% if task.done_date.nil? %>
          not complete
        <% else %>
          complete
        <% end %>
      </td>
    </tr>
    <% end %>

</table>

<%= render partial: 'home_button' %>
